#                                                                    -*-perl-*-
$description = "Test the xor function.\n";

$details = "Try various uses of xor
results.\n";

$DB::single = 1;
# TEST #0
#
foreach my $t (qw/xor nxor/)
{
  foreach my $test (['a', 'b'], # False
                    ['a', ''],  # True
                    ['', ''],   # False
                    ['', 'b'],  #true
                   )
  {
    my ($a,$b) = @$test;
    my $res;

    # Test xor
    if ($a && $b || !$a && !$b)
    {
      $res = '';
    } elsif ($a)
    {
      $res = $a;
    } else
    {
      $res = $b;
    }

    # Reverse result if nxor
    if (($t eq 'nxor'))
    {
      $res = $res ? '' : 'T';
    }
    
    run_make_test("
true  := T
false :=

res = \$($t $a, $b)

all:
	@echo res=\$(res)",
                  '',
                  "res=$res\n");

  }
}

1;
